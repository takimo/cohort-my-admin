include ../navbar

include ../subnav

div.container
  form.form-horizontal(
    action="/cohort/#{id}/setting",
    method="POST"
  )
    fieldset
      legend 基本設定
      div.control-group
        label.control-label(for="input01") タイトル
        div.controls
          input.input-xlarge(type="text",name="title",value=cohort.title)
      legend コホート
      div.control-group
        label.control-label(for="input01") Acquisition
        div.controls
          input.input-xlarge(type="text",name="acquisition",value=cohort.acquisition)
      div.control-group
        label.control-label(for="input01") Activation
        div.controls
          input.input-xlarge(type="text",name="activation",value=cohort.activation)
      div.control-group
        label.control-label(for="input01") Retention
        div.controls
          input.input-xlarge(type="text",name="retention",value=cohort.retention)
      div.control-group
        label.control-label(for="input01") Revenue
        div.controls
          input.input-xlarge(type="text",name="revenue",value=cohort.revenue)
      div.control-group
        label.control-label(for="input01") Referral
        div.controls
          input.input-xlarge(type="text",name="referral",value=cohort.referral)
      legend リンク
      div.control-group
        label.control-label(for="input01") URL
        div.controls
          input.input-xlarge(type="text",name="link",value=cohort.link)
      div.form-actions
        button.btn.btn-primary(type="submit") 送信
        button.btn キャンセル
