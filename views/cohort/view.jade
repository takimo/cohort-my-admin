// navbar
include ../navbar

include ../subnav

div.container
  h1 #{id}/#{targetDay}

div.container
  if !rawData
    div.alert.alert-info
      a.close(data-dismiss="alert",href="#") x
      h4 データがありません
      上記「データを追加するから」データを入力してください。
  else
    div#chartdiv(style="width:100%;height:400px")
  ul.pager
    li.previous
      a(href="/cohort/#{id}/#{previousDay}") &larr; #{previousDay}
    li.next
      a(href="/cohort/#{id}/#{nextDay}") #{nextDay} &rarr;

div.container
  div.row
    div.span6
      table.table.table-striped.table-bordered.table-condensed
        tbody
          each value, key in cohortData
            if key != "title"
              tr
                td= key
                td= value
    div.span6
      table.table.table-striped.table-bordered.table-condensed
        tbody
          tr
            td Link
            td
              a(href=cohortData.link,target="_blank")= cohortData.link

div.container
  div#results(style="display:none")

script
  var chartData = !{json};
  var rawData = !{rawData};
script(src="/js/chart.js",type="text/javascript")
script(src="/js/jsontable.js",type="text/javascript")
